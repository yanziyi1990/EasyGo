<div id="info_4" style="padding: 0.5cm;width: 50%;margin: 0 auto">
  <h1>Editing Product</h1>
  <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% @product.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <% (Product.attribute_names-['id', 'created_at', 'updated_at']).each do |column| %>
          <%= f.label column.to_sym %>:
          <%= f.text_area column.to_sym,class:"form-control" %>
          <br>
      <% end %>
      <div class="actions">
        <%= f.submit class:"form-control" %>
      </div>
  <% end %>
</div>
